<style>
  .about-section::before {
    content: "ABOUT US";
    position: absolute;
    font-size: clamp(15px, 20vw, 100px);
    font-weight: 900;
    opacity: 0.03;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* white-space: nowrap; */
    text-align: center;
    z-index: 0;
    pointer-events: none;
  }

  .profile-section::before {
    content: "COMPANY PROFILE";
    position: absolute;
    font-size: clamp(15px, 20vw, 100px);
    font-weight: 900;
    opacity: 0.03;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* white-space: nowrap; */
    text-align: center;
    z-index: 0;
    pointer-events: none;
  }

  .watermark {
    position: absolute;
    font-size: clamp(200px, 40vw, 400px);
    font-weight: 900;
    opacity: 0.03;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    color: #000;
    pointer-events: none;
  }
</style>
