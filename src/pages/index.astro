      </div>
    </div>

    <div
      class="image-container relative flex items-center order-first md:order-last"
    >
      <div
        class="absolute inset-0 bg-gradient-to-r from-blue-50 to-transparent opacity-20 z-0"
      >
      </div>
      <div class="w-full aspect-[4/3]">
        <img
          src="/images/furnitur-1.jpg"
          alt="Workers managing plastic materials in warehouse"
          class="w-full h-full object-cover rounded-lg shadow-lg relative"
        />
      </div>
    </div>
  </section>

  <!-- Compro -->
