---
import "@styles/global.css";
import Navbar from "@components/Navbar.astro";

const { pageTitle } = Astro.props;

interface Props {
  pageTitle: string;
}
---

<!doctype html>
<html lang="en" class="font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo-dummy.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle} | Moluska</title>
  </head>
  <body class="font-noto-sans-jp">
    <Navbar />
    <div class="mt-24" id="about"></div>

    <!-- Content -->
    <section class="w-full mx-auto px-4 lg:px-12 md:px-6">
      <div class="relative">
        <div
          class="fixed top-0 right-0 mt-16 ml-auto sm:w-36 w-12 h-[50dvh] bg-slate-200 rounded-l-xl -z-10"
        >
        </div>
        <div>
          <slot />
        </div>
        <div
          class="fixed bottom-8 left-0 mr-auto sm:w-12 w-4 sm:h-[25dvh] h-24 bg-slate-200 rounded-r-xl -z-10"
        >
        </div>
      </div>
    </section>

    <footer class="mx-auto px-4 lg:px-24 md:px-6 bg-slate-100 py-8 mt-12">
      <div
        class="max-w-7xl mx-auto grid md:grid-cols-4 sm:grid-cols-2 grid-cols-1 gap-8"
      >
        <div class="col-span-1 flex flex-col items-center px-8">
          <img
            src="/logo-dummy.png"
            alt="logo"
            class="h-28 w-28 aspect-square object-cover"
          />
          <ul class="flex flex-row gap-x-4 text-slate-500 mt-2">
            <li>
              <a href="https://www.facebook.com/" target="_blank">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 hover:cursor-pointer hover:scale-105 transition-all duration-200 facebook"
                >
                  <path
                    d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                  >
                  </path>
                </svg></a
              >
            </li>
            <li>
              <a href="https://twitter.com/" target="_blank">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 hover:cursor-pointer hover:scale-105 transition-all duration-200 twitter"
                >
                  <path
                    d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                  >
                  </path>
                </svg>
              </a>
            </li>
            <li>
              <a href="https://www.instagram.com/" target="_blank">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 hover:cursor-pointer hover:scale-105 transition-all duration-200 instagram"
                >
                  <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z">
                  </path>
                  <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                </svg>
              </a>
            </li>
            <li>
              <a href="https://www.tiktok.com/" target="_blank">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 hover:cursor-pointer hover:scale-105 transition-all duration-200 music-2"
                >
                  <circle cx="8" cy="18" r="4"></circle>
                  <path d="M12 18V2l7 4"> </path>
                </svg>
              </a>
            </li>
          </ul>
        </div>
        <div class="col-span-1 text-slate-500 text-sm px-8">
          <div class="flex flex-col space-y-2">
            <h6 class="font-semibold">TOKO GRESIK</h6>
            <p>Jl. Jawa No.2 GKB Kebomas Gresik</p>
            <div>
              Phone :
              <a href="https://wa.me/628123456789" class="font-medium">
                +628123456789
              </a>
            </div>
            <a
              href="https://maps.app.goo.gl/4vLKBvHfzEEB4C5n8"
              class="px-4 py-2 border font-semibold uppercase text-center hover:bg-slate-400 hover:text-white transition-all duration-200"
            >
              Get Direction
            </a>
          </div>
        </div>
        <div class="col-span-1 text-slate-500 text-sm px-8">
          <div class="flex flex-col space-y-2">
            <h6 class="font-semibold">TOKO GRESIK</h6>
            <p>Jl. Jawa No.2 GKB Kebomas Gresik</p>
            <div>
              Phone :
              <a href="https://wa.me/628123456789" class="font-medium">
                +628123456789
              </a>
            </div>
            <a
              href="https://maps.app.goo.gl/4vLKBvHfzEEB4C5n8"
              class="px-4 py-2 border font-semibold uppercase text-center hover:bg-slate-400 hover:text-white transition-all duration-200"
            >
              Get Direction
            </a>
          </div>
        </div>
        <div class="col-span-1 text-slate-500 text-sm px-8">
          <div class="flex flex-col space-y-2">
            <h6 class="font-semibold">SITEMAP</h6>
            <ul class="space-y-1 font-medium">
              <li>
                <a href="/">HOME</a>
              </li>
              <li>
                <a href="/collections">COLLECTIONS</a>
              </li>
              <li>
                <a href="/studio">STUDIO</a>
              </li>
              <li>
                <a href="/">HOME</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="text-center text-slate-500 text-sm mt-8">
        Copyright &copy; {new Date().getFullYear()} Moluska. All Right Reserved
      </div>
    </footer>
  </body>
</html>
